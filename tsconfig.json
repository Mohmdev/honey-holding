{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "target": "ES2024",
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@CMS/*": ["src/CMS/*"],
      "@admin-components/*": ["src/CMS/_components/*"],
      "@access/*": ["src/services/access/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@data": ["src/_data"],
      "@data/*": ["src/_data/*"],
      "@dashboard/*": ["./src/app/(frontend)/(dashboard)/dashboard/*"],
      "@components/*": ["src/components/*"],
      "@providers": ["src/providers"],
      "@providers/*": ["src/providers/*"],
      "@forms/*": ["src/forms/*"],
      "@blocks/*": ["src/blocks/*"],
      "@fields/*": ["src/fields/*"],
      "@ui/*": ["src/components/_ui/*"],
      "@graphics/*": ["src/components/_ui/graphics/*"],
      "@icons/*": ["src/components/_ui/icons/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@lib/*": ["src/lib/*"],
      "@hooks/*": ["src/lib/hooks/*"],
      "@constants": ["src/lib/constants.ts"],
      "react": ["node_modules/@types/react"],
      "@root/*": ["src/*"],
      "@payload-config": ["src/CMS/payload-config.ts"],
      "@payload-types": ["src/CMS/payload-types.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "redirects.js",
    "next.config.ts",
    "next-sitemap.config.js"
  ],
  "exclude": ["node_modules", ".temp", ".docs"]
}
