    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.5",
    "babel-plugin-react-compiler": "19.0.0-beta-37ed2a7-20241206",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.10",
    "framer-motion": "^11.14.4",
    "geist": "^1.3.1",
    "jsonwebtoken": "9.0.2",
    "juice": "^11.0.0",
    "lucide-react": "^0.468.0",
